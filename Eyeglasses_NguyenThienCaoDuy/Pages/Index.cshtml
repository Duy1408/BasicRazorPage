@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<h1>Login</h1>

<h4>Account</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Account.EmailAddress" class="control-label"></label>
                <input asp-for="Account.EmailAddress" class="form-control" />
                <span asp-validation-for="Account.EmailAddress" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Account.AccountPassword" class="control-label"></label>
                <input asp-for="Account.AccountPassword" class="form-control" type="Password" />
                <span asp-validation-for="Account.AccountPassword" class="text-danger"></span>
            </div>
            <div class="form-group text-danger">
                @ViewData["notification"]
            </div>
            <div class="form-group">
                <input type="submit" value="login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

